                    <label>Trabajo en Frio</label>
                  </div>
                </t>
                <t t-if="doc.electrico">
                  <div class="col-4 flex">
                    <label>Trabajo Eléctrico</label>
                  </div>
                </t>
              </div>

              <div class="row m-1">
                <div class="col-sm-12 bg-primary text-center border border-dark">LUGAR DE TRABAJO Y EJECUTOR</div>
              </div>
              <div class="row m-1">
                <div class="col-6">
                  <div class="col-12 border bg-secondary">AREA</div>
                  <input class="form-control area-select" t-att-value="doc.area" type="text"/>
                  <div class="col-12 border bg-secondary">SUB - AREA</div>
                  <input class="form-control sub-area-select" t-att-value="doc.sub_area" type="text"/>
                  <div class="col-12 border bg-secondary">UBICACION</div>
                  <input class="form-control ubicacion" t-att-value="doc.ubicacion_exacta" type="text"/>
                </div>
                <div class="col-6">
                  <div class="flex">
                    <div class="col-12 border bg-secondary">CONTRATISTA</div>
                    <input t-att-value="doc.contratista_id.name" type="text" class="form-control fecha-inicio" />
                  </div>
                  <div class="flex">
                    <div class="col-12 border bg-secondary">
                      Fecha de Inicio
                    </div>
                    <div class="col-12 flex">
                      <div class="row  ">
                        <div class="col-12 m-0 p-0">
                          <input t-att-value="doc.fecha_inicio" type="date" class="form-control fecha-fin" placeholder="dd/mm/aaaa"/>
                        </div>
                      </div>

                    </div>
                  </div>
                  <div class="flex">
                    <div class="col-12 border bg-secondary">
                      Fecha de Fin
                    </div>
                    <div class="col-12 flex">
                      <div class="row">
                        <div class="col-12 m-0 p-0">
                          <input t-att-value="doc.fecha_fin" type="date" class="form-control fecha-fin" placeholder="dd/mm/aaaa"/>
                        </div>
                      </div>
                    </div>
                  </div>

                </div>
              </div>
              <div class="row m-1">
