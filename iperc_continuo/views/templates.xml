  <template id="configuracion_iperc_continuo" name="IPERC continuo">
    <t t-call="iperc_continuo.sidebar_iperc_continuo">
      <div class="wrapper modulo-wrapper">
        <!-- Page Content -->
        <div id="content" class="iperc-continuo">
          <div class="py-2 mx-auto">
            <div class="text-center mb-5">
              <h1>LISTADO DE TIPOS DE PELIGROS</h1>
            </div>
            <table id="resumen" class="table table-hover responsive nowrap w-100 text-center">
              <thead class="thead-dark">
                <tr>
                  <th>#</th>
                  <th>TIPO DE PELIGRO</th>
                  <th>DESCRIPCIÓN DE PELIGRO</th>
                </tr>
              </thead>
              <tbody>
                <t t-set="counter" t-value="0"/>
                <t t-foreach="tipos" t-as="tipo">
                  <t t-set="counter" t-value="counter + 1"/>
                  <tr></tr>
                  <td><t t-esc="counter"/></td>
                  <td><span t-field="tipo.name"/></td>
                  <td>
                    <div>
                      <button type="button" class="btn bg-success" data-toggle="modal" t-attf-data-target="#tipoeditar-{{tipo.id}}">
                        <i class="fa fa-pencil-square-o"></i>
                      </button>
                      <div class="modal fade" t-attf-id="tipoeditar-{{tipo.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title font-weight-bold" id="exampleModalLabel">TIPO DE PELIGRO:
                                <t t-esc="tipo.name"/></h5>
                            </div>
                            <div class="modal-body text-left">
                              <t t-set="counterdescription" t-value="0"/>
                              <t t-foreach="tipo.descripcion_ids" t-as="descripcion">
                                <t t-set="counterdescription" t-value="counterdescription + 1"/>
                                <div class="row py-2 mx-auto align-items-center">
                                  <div class="col-1"><t t-esc="counterdescription"/></div>
                                  <div class="col-9"><span t-field="descripcion.name"/></div>
                                  <div class="col-2">
                                    <button type="button" class="btn btn-danger descripcion_id" t-att-data-descripcion_id="descripcion.id">
                                      <i class="fa fa-trash"></i>
                                    </button>
                                  </div>
                                </div>

                              </t>
                              <div class="row py-2 mx-auto align-items-center">
                                <div class="col-1">#</div>
                                <div class="col-7"><input class="form-control col-12" name="new-tipo-descripcion" type="text"/></div>
                                <div class="col-4"></div>
                              </div>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-dismiss="modal">CERRAR</button>
                              <button type="button" class="btn btn-secondary agregar_descripcion" t-att-data-tipo_id="tipo.id">AGREGAR</button>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </td>
                </t>
              </tbody>
            </table>

            <div class="d-flex justify-content-center float-left">

              <button type="button" class="btn btn-primary font-weight-bold" data-toggle="modal" data-target="#new_tipo_peligro">
                AGREGAR TIPO DE PELIGRO
              </button>
              <div class="modal fade" id="new_tipo_peligro" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">NUEVO TIPO DE PELIGRO</h5>
                    </div>
                    <div class="modal-body">
                      NOMBRE
                      <input class="form-control col-12" name="new-tipo-peligro" type="text"/>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">CERRAR</button>
                      <button type="button" class="btn btn-primary nuevo-tipo-peligro">GUARDAR</button>
                    </div>
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </t>
  </template>

